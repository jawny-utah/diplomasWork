<% link = pagy_link_proc(pagy) %>

<div class="pagy_nav pagination" aria-label="pager" role="navigation">
  <% if pagy.prev %>
    <span class="page prev"><%= link.call(pagy.prev, "<", 'aria-label="previous"').html_safe %></span>
  <% else %>
    <span class="page prev disabled"> < </span>
  <% end %>
  <% pagy.series.each do |item| %>
    <% if item.is_a?(Integer) %>
      <span class="page">
        <%= link.call(item).html_safe %>
      </span>
    <% elsif item.is_a?(String) %>
      <span class="page current"><%= item %></span>
    <% elsif item == :gap %>
      <span class="page gap"><%= pagy_t('pagy.nav.gap') %></span>
    <% end %>
  <% end %>
  <% if pagy.next %>
    <span class="page next"><%= link.call(pagy.next, ">", 'aria-label="next"').html_safe %></span>
  <% else %>
    <span class="page next disabled"> > </span>
  <% end %>
</div>
