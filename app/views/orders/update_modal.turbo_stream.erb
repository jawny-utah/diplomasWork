<%= turbo_stream.update :modal, partial: "shared/cart" %>
<% if @order.nil? || @order.wear_orders.empty? %>
  <%= turbo_stream.update :checkout_page, template: "checkouts/show" %>
<% else %>
  <%= turbo_stream.update :checkout_wear_order, partial: "checkouts/checkout_wear_order", collection: @wear_orders, as: :wear_order %>
<% end %>
<% if flash[:notice] %>
  <%= turbo_stream.prepend "flash", partial: "shared/flash_popup", locals: { msg: flash[:notice] } %>
<% end %>
